.container
  .header.row
    .span12
      .navbar
        .navbar-inner
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %h1
            = link_to "Motivate Me", root_path
          .nav-collapse.collapse
            %ul.nav.pull-right
              %li{:class => active_class("home","index")}
                = link_to root_path do
                  %i.icon-home
                  %br/
                  Home
              - if user_signed_in?
                %li{:class => active_class("users","show")}
                  = link_to user_path(current_user) do
                    %i.icon-user
                    %br/
                    Profiel
                %li{:class => active_class("groups")}
                  = link_to groups_path do
                    %i.icon-group
                    %br/
                    Groepen
                %li{:class => active_class("goals"), :class => active_class("users","goals")}
                  = link_to user_goals_path(current_user) do
                    %i.icon-flag
                    %br/
                    Goals
                %li
                  = link_to destroy_user_session_path, :method=>'delete' do
                    %i.icon-signout
                    %br/
                    Uitloggen
              - else
                %li{:class => active_class("devise/sessions")}
                  = link_to new_user_session_path do
                    %i.icon-signin
                    %br/
                    Log in
