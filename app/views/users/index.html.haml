/ Page Title
.page-title
  .container
    .row
      .span12
        %i.icon-user.page-title-icon
        %h2 Gebruikers /
        %p Een lijst van alle gebruikers
/ Users container
.container.users
  .row
    .span12
      %table
        %thead
          %tr
            %th{width: 200} Gebruikersnaam
            %th
        %tbody
          -@users.each do |user|
            %tr
              %td= link_to user.username, user
              %td= link_to "(Als vriend toevoegen)", friendships_path(:friend_id => user), :method => :post
