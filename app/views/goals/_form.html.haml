= simple_form_for [@group, @goal], html: { class: "form-horizontal" }, defaults: { input_html: { class: 'span7' } }  do |f|
  = f.error_notification

  .form-inputs
    = f.input :title
    = f.input :description
    = f.input :reward
    = f.input :endtime, :as => :date_picker

  .form-actions
    = f.button :submit, "Goal aanmaken", class: "btn btn-custom"
