/ Page Title
.page-title
  .container
    .row
      .span12
        %i.icon-flag.page-title-icon
        %h2 Goals /
        %p Een lijst van alle goals
        = link_to new_group_goal_path(@group), class: "btn btn-custom" do
          %i.icon-plus
          = " Nieuwe goal"
/ Content
.container.content
  .row
    .span12
      %table.table
        %tr
          %th Icoon
          %th Tijd
          %th Titel
          %th Beschrijving
          %th Beloning
          %th Groep

        - @goals.each do |goal|
          %tr{id: "#{goal.id}", class: "group"}
            %td
              %i.icon-flag
            %td
              1:00:00
            %td= goal.title
            %td= goal.description
            %td= goal.reward
            %td= goal.group.try(:title)
          %tr.separator
      %br

:javascript
  $('table').on('click', 'tr', function() {
    group_id = "#{@group.id}"
    id = $(this).attr("id");
    url = "#{groups_url}/"+group_id+"/goals/"+id;
    window.location = url;
  });